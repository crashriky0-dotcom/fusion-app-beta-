<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scheda Preventivo"
            android:textSize="28sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- DATI BASE -->
        <EditText
            android:id="@+id/edtCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cliente" />

        <EditText
            android:id="@+id/edtTecnico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tecnico" />

        <EditText
            android:id="@+id/edtData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data (gg/mm/aaaa)" />

        <EditText
            android:id="@+id/edtMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Marca" />

        <EditText
            android:id="@+id/edtModello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Modello" />

        <EditText
            android:id="@+id/edtTargaTelaio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Targa o Telaio" />

        <!-- SMONTAGGIO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smontaggio / Rimontaggio"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <CheckBox
            android:id="@+id/chkSmontaggio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Includi smontaggio/rimontaggio" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spnCatSmontaggio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false" />

            <EditText
                android:id="@+id/edtSmontaggioEuro"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:hint="€"
                android:inputType="numberDecimal"
                android:enabled="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtHintSmontaggio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A=90€  B=120€  C=150€  D=200€ (modificabile)"
            android:textSize="12sp"
            android:paddingTop="4dp" />

        <!-- PANNELLI AUTO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pannelli auto"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- CATALOGO PANNELLI (seleziona cosa includere nel preventivo) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleziona pannelli"
            android:textStyle="bold"
            android:paddingBottom="6dp" />

        <LinearLayout
            android:id="@+id/panelCatalogContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="#22000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pannelli selezionati"
            android:textStyle="bold"
            android:paddingBottom="6dp" />

        <!-- Qui il Kotlin inserisce dinamicamente i pannelli -->
        <LinearLayout
            android:id="@+id/panelContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- PREZZO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PREZZO"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/txtTotaleConsigliato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Totale consigliato: 0 €"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtPrezzoReale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prezzo reale €"
            android:inputType="numberDecimal" />

        <!-- BLOCCO IVA (AppFusion) -->
        <CheckBox
            android:id="@+id/chkIvaCompresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IVA compresa"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/edtIvaPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IVA % (default 22)"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/txtIvaBreakdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imponibile: 0 € | IVA: 0 € | Totale: 0 €"
            android:textStyle="bold"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/txtScontoEffettivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sconto effettivo: 0 € (0%)"
            android:paddingTop="8dp" />

    </LinearLayout>

</ScrollView>
