<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scheda Preventivo"
            android:textSize="28sp"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- DATI BASE -->
        <EditText
            android:id="@+id/edtCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cliente" />

        <EditText
            android:id="@+id/edtTecnico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tecnico" />

        <EditText
            android:id="@+id/edtData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data (gg/mm/aaaa)" />

        <EditText
            android:id="@+id/edtMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Marca" />

        <EditText
            android:id="@+id/edtModello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Modello" />

        <EditText
            android:id="@+id/edtTargaTelaio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Targa o Telaio" />

        <!-- PREZZO -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PREZZO"
            android:textStyle="bold"
            android:paddingTop="12dp" />

        <TextView
            android:id="@+id/txtTotaleConsigliato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Totale consigliato: 0 €"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edtPrezzoReale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prezzo reale €"
            android:inputType="numberDecimal" />

        <!-- BLOCCO IVA -->
        <CheckBox
            android:id="@+id/chkIvaCompresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IVA compresa"
            android:paddingTop="8dp" />

        <EditText
            android:id="@+id/edtIvaPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IVA % (default 22)"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/txtIvaBreakdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Imponibile: 0 € | IVA: 0 € | Totale: 0 €"
            android:textStyle="bold"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/txtScontoEffettivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sconto effettivo: 0 € (0%)"
            android:paddingTop="8dp" />

    </LinearLayout>

</ScrollView>
